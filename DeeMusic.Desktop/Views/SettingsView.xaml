<UserControl x:Class="DeeMusic.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0"
                  Text="Settings" 
                  FontSize="24" 
                  FontWeight="SemiBold"
                  Margin="8,0,0,16"/>
        
        <!-- Tabbed Content -->
        <TabControl Grid.Row="1" 
                   Style="{StaticResource MaterialDesignNavigationRailTabControl}">
            
            <!-- ARL Tab -->
            <TabItem Header="ARL">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="Key" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="ARL" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600">
                        <TextBlock Text="Deezer Authentication" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,16"/>
                        
                        <TextBox materialDesign:HintAssist.Hint="Deezer ARL Token"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding DeezerARL, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                TextChanged="ArlTextBox_TextChanged"
                                Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Your ARL token is required to access Deezer content. Keep it secure."
                                  FontSize="12"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,16"/>
                        
                        <TextBlock Text="How to find your ARL token:"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Margin="0,8,0,8"/>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">
                            <Run Text="1. Log into "/>
                            <Hyperlink NavigateUri="https://www.deezer.com" RequestNavigate="Hyperlink_RequestNavigate">deezer.com</Hyperlink>
                            <Run Text=" in your browser"/>
                        </TextBlock>
                        <TextBlock Text="2. Open Developer Tools (F12)" Margin="0,0,0,4"/>
                        <TextBlock Text="3. Go to Application → Cookies" Margin="0,0,0,4"/>
                        <TextBlock Text="4. Copy the 'arl' cookie value" Margin="0,0,0,4"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Artwork Tab -->
            <TabItem Header="Artwork">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="Image" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Artwork" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600">
                        <TextBlock Text="Artwork Settings" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,16"/>
                        
                        <!-- Embedded Artwork -->
                        <TextBlock Text="Embedded Artwork (in audio file)" 
                                  FontSize="14" 
                                  FontWeight="Medium"
                                  Margin="0,0,0,8"/>
                        
                        <CheckBox Content="Embed Album Artwork in Audio File"
                                 IsChecked="{Binding EmbedArtwork}"
                                 Margin="0,0,0,8"/>
                        
                        <ComboBox materialDesign:HintAssist.Hint="Embedded Artwork Size"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 SelectedValue="{Binding ArtworkSize}"
                                 SelectedValuePath="Tag"
                                 IsEnabled="{Binding EmbedArtwork}"
                                 Margin="0,0,0,24">
                            <ComboBoxItem Content="500x500" Tag="500"/>
                            <ComboBoxItem Content="1000x1000" Tag="1000"/>
                            <ComboBoxItem Content="1200x1200" Tag="1200"/>
                        </ComboBox>
                        
                        <!-- Album Cover Files -->
                        <TextBlock Text="Album Cover (separate file)" 
                                  FontSize="14" 
                                  FontWeight="Medium"
                                  Margin="0,8,0,8"/>
                        
                        <CheckBox Content="Save Album Cover as Separate File"
                                 IsChecked="{Binding Settings.Download.SaveAlbumCover}"
                                 Margin="0,0,0,8"/>
                        
                        <Grid Margin="0,0,0,24" IsEnabled="{Binding Settings.Download.SaveAlbumCover}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0"
                                     materialDesign:HintAssist.Hint="Album Cover Size"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     SelectedValue="{Binding Settings.Download.AlbumCoverSize}"
                                     SelectedValuePath="Tag">
                                <ComboBoxItem Content="500x500" Tag="500"/>
                                <ComboBoxItem Content="1000x1000" Tag="1000"/>
                                <ComboBoxItem Content="1200x1200" Tag="1200"/>
                                <ComboBoxItem Content="1500x1500" Tag="1500"/>
                            </ComboBox>
                            
                            <TextBox Grid.Column="2"
                                    materialDesign:HintAssist.Hint="Filename (e.g., cover)"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding Settings.Download.AlbumCoverFilename, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        
                        <!-- Artist Image Files -->
                        <TextBlock Text="Artist Image (separate file)" 
                                  FontSize="14" 
                                  FontWeight="Medium"
                                  Margin="0,8,0,8"/>
                        
                        <CheckBox Content="Save Artist Image as Separate File"
                                 IsChecked="{Binding Settings.Download.SaveArtistImage}"
                                 Margin="0,0,0,8"/>
                        
                        <Grid Margin="0,0,0,16" IsEnabled="{Binding Settings.Download.SaveArtistImage}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0"
                                     materialDesign:HintAssist.Hint="Artist Image Size"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     SelectedValue="{Binding Settings.Download.ArtistImageSize}"
                                     SelectedValuePath="Tag">
                                <ComboBoxItem Content="500x500" Tag="500"/>
                                <ComboBoxItem Content="1000x1000" Tag="1000"/>
                                <ComboBoxItem Content="1200x1200" Tag="1200"/>
                                <ComboBoxItem Content="1500x1500" Tag="1500"/>
                            </ComboBox>
                            
                            <TextBox Grid.Column="2"
                                    materialDesign:HintAssist.Hint="Filename (e.g., artist)"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding Settings.Download.ArtistImageFilename, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Filenaming Tab -->
            <TabItem Header="Filenaming">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FileDocument" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Filenaming" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="700">
                        <TextBlock Text="File and Folder Structure" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,16"/>
                        
                        <!-- Download Directory -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                    materialDesign:HintAssist.Hint="Download Directory"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding DownloadPath, UpdateSourceTrigger=PropertyChanged}"
                                    IsReadOnly="True"/>
                            
                            <Button Grid.Column="1"
                                   Style="{StaticResource MaterialDesignOutlinedButton}"
                                   Command="{Binding BrowseFolderCommand}"
                                   Margin="8,0,0,0"
                                   Height="56">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Folder" Width="20" Height="20" VerticalAlignment="Center"/>
                                    <TextBlock Text="Browse" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- Audio Quality -->
                        <ComboBox materialDesign:HintAssist.Hint="Audio Quality"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 SelectedValue="{Binding Quality}"
                                 SelectedValuePath="Tag"
                                 Margin="0,0,0,16">
                            <ComboBoxItem Content="MP3 128 kbps" Tag="MP3_128"/>
                            <ComboBoxItem Content="MP3 320 kbps" Tag="MP3_320"/>
                            <ComboBoxItem Content="FLAC (Lossless)" Tag="FLAC"/>
                        </ComboBox>
                        
                        <!-- Concurrent Downloads -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                      Text="Concurrent Downloads"
                                      VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Slider Width="200"
                                       Minimum="1"
                                       Maximum="12"
                                       Value="{Binding ConcurrentDownloads}"
                                       TickFrequency="1"
                                       IsSnapToTickEnabled="True"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ConcurrentDownloads}"
                                          Width="30"
                                          TextAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Filename Templates -->
                        <TextBlock Text="Filename Templates" 
                                  FontSize="16" 
                                  FontWeight="Medium"
                                  Margin="0,8,0,12"/>
                        
                        <TextBox materialDesign:HintAssist.Hint="Single Track Template"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Settings.Download.SingleTrackTemplate, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>
                        
                        <TextBox materialDesign:HintAssist.Hint="Album Track Template"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Settings.Download.AlbumTrackTemplate, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>
                        
                        <TextBox materialDesign:HintAssist.Hint="Playlist Track Template"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Settings.Download.PlaylistTrackTemplate, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,8"/>
                        
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,0,0,24">
                            <Run Text="Available placeholders:"/>
                            <LineBreak/>
                            <Run Text="• {artist}, {album}, {title}, {album_artist}, {genre}"/>
                            <LineBreak/>
                            <Run Text="• {track_number}, {playlist_position}, {disc_number}"/>
                            <LineBreak/>
                            <Run Text="• {year}, {playlist_name}, {playlist}, {isrc}"/>
                            <LineBreak/>
                            <Run Text="Use :02d for zero-padded numbers (e.g., {track_number:02d})"/>
                        </TextBlock>
                        
                        <!-- Folder Structure -->
                        <TextBlock Text="Folder Structure" 
                                  FontSize="16" 
                                  FontWeight="Medium"
                                  Margin="0,8,0,12"/>
                        
                        <TextBlock Text="Folder Creation" 
                                  FontSize="14" 
                                  FontWeight="Medium"
                                  Margin="0,0,0,8"/>
                        
                        <CheckBox Content="Create folder for playlists"
                                 IsChecked="{Binding Settings.Download.CreatePlaylistFolder}"
                                 Margin="0,0,0,4"/>
                        <CheckBox Content="Create folder for artist"
                                 IsChecked="{Binding Settings.Download.CreateArtistFolder}"
                                 Margin="0,0,0,4"/>
                        <CheckBox Content="Create folder for album"
                                 IsChecked="{Binding Settings.Download.CreateAlbumFolder}"
                                 Margin="0,0,0,4"/>
                        <CheckBox Content="Create folder for CDs"
                                 IsChecked="{Binding Settings.Download.CreateCDFolder}"
                                 Margin="0,0,0,4"/>
                        <CheckBox Content="Create folder structure for playlists"
                                 IsChecked="{Binding Settings.Download.PlaylistFolderStructure}"
                                 Margin="0,0,0,4"/>
                        <CheckBox Content="Create folder structure for singles"
                                 IsChecked="{Binding Settings.Download.SinglesFolderStructure}"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Folder Name Templates" 
                                  FontSize="14" 
                                  FontWeight="Medium"
                                  Margin="0,8,0,8"/>
                        
                        <TextBox materialDesign:HintAssist.Hint="Playlist Folder Template"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Settings.Download.PlaylistFolderTemplate, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>
                        
                        <TextBox materialDesign:HintAssist.Hint="Artist Folder Template"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Settings.Download.ArtistFolderTemplate, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>
                        
                        <TextBox materialDesign:HintAssist.Hint="Album Folder Template"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Settings.Download.AlbumFolderTemplate, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,12"/>
                        
                        <TextBox materialDesign:HintAssist.Hint="CD Folder Template"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding Settings.Download.CDFolderTemplate, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,8"/>
                        
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,0,0,16">
                            <Run Text="Available placeholders:"/>
                            <LineBreak/>
                            <Run Text="• {playlist} - Playlist name"/>
                            <LineBreak/>
                            <Run Text="• {artist} - Artist name"/>
                            <LineBreak/>
                            <Run Text="• {album} - Album name"/>
                            <LineBreak/>
                            <Run Text="• {disc_number} - Disc number"/>
                            <LineBreak/>
                            <Run Text="• {year} - Release year"/>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Lyrics Tab -->
            <TabItem Header="Lyrics">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="TextBox" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Lyrics" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel MaxWidth="600">
                        <TextBlock Text="Lyrics Settings" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,16"/>
                        
                        <CheckBox Content="Enable Lyrics Download"
                                 IsChecked="{Binding Settings.Lyrics.Enabled}"
                                 Margin="0,0,0,24"/>
                        
                        <!-- Synced Lyrics -->
                        <TextBlock Text="Synced Lyrics (LRC format with timestamps)" 
                                  FontSize="14" 
                                  FontWeight="Medium"
                                  Margin="0,0,0,8"/>
                        
                        <CheckBox Content="Download Synced Lyrics"
                                 IsChecked="{Binding Settings.Lyrics.SyncedLyrics}"
                                 IsEnabled="{Binding Settings.Lyrics.Enabled}"
                                 Margin="0,0,0,8"/>
                        
                        <CheckBox Content="Embed Synced Lyrics in Audio File"
                                 IsChecked="{Binding Settings.Lyrics.EmbedSynced}"
                                 IsEnabled="{Binding Settings.Lyrics.SyncedLyrics}"
                                 Margin="16,0,0,8"/>
                        
                        <CheckBox Content="Save Synced Lyrics as Separate File (.lrc)"
                                 IsChecked="{Binding Settings.Lyrics.SaveSyncedFile}"
                                 IsEnabled="{Binding Settings.Lyrics.SyncedLyrics}"
                                 Margin="16,0,0,8"/>
                        
                        <TextBlock Text="Synced lyrics will be saved as: trackname.lrc"
                                  FontSize="11"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                  Margin="16,0,0,24"
                                  Visibility="{Binding Settings.Lyrics.SaveSyncedFile, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <!-- Unsynced Lyrics -->
                        <TextBlock Text="Unsynced Lyrics (Plain text without timestamps)" 
                                  FontSize="14" 
                                  FontWeight="Medium"
                                  Margin="0,8,0,8"/>
                        
                        <CheckBox Content="Download Unsynced Lyrics"
                                 IsChecked="{Binding Settings.Lyrics.UnsyncedLyrics}"
                                 IsEnabled="{Binding Settings.Lyrics.Enabled}"
                                 Margin="0,0,0,8"/>
                        
                        <CheckBox Content="Embed Unsynced Lyrics in Audio File"
                                 IsChecked="{Binding Settings.Lyrics.EmbedUnsynced}"
                                 IsEnabled="{Binding Settings.Lyrics.UnsyncedLyrics}"
                                 Margin="16,0,0,8"/>
                        
                        <CheckBox Content="Save Unsynced Lyrics as Separate File (.txt)"
                                 IsChecked="{Binding Settings.Lyrics.SaveUnsyncedFile}"
                                 IsEnabled="{Binding Settings.Lyrics.UnsyncedLyrics}"
                                 Margin="16,0,0,8"/>
                        
                        <TextBlock Text="Unsynced lyrics will be saved as: trackname.txt"
                                  FontSize="11"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                  Margin="16,0,0,16"
                                  Visibility="{Binding Settings.Lyrics.SaveUnsyncedFile, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Cache Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Database" Width="20" Height="20" VerticalAlignment="Center"/>
                        <TextBlock Text="Cache" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Image Cache"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="DeeMusic caches album artwork and images to improve loading performance. You can clear the cache if you're experiencing issues or want to free up disk space."
                                  TextWrapping="Wrap"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                  Margin="0,0,0,16"/>
                        
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                               Command="{Binding ClearImageCacheCommand}"
                               Height="40"
                               HorizontalAlignment="Left"
                               Padding="24,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DeleteSweep" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Clear Image Cache" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>
        
        <!-- Save Button -->
        <Button Grid.Row="2"
               Style="{StaticResource MaterialDesignRaisedButton}"
               Command="{Binding SaveCommand}"
               Height="48"
               HorizontalAlignment="Stretch"
               Margin="8,16,8,8">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="ContentSave" Width="24" Height="24" VerticalAlignment="Center"/>
                <TextBlock Text="Save Settings" Margin="8,0,0,0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
