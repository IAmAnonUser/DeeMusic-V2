<!-- XAML VERSION: 2025-11-29 - Periodic refresh timer fix -->
<UserControl x:Class="DeeMusic.Desktop.Views.QueueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:DeeMusic.Desktop.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ProgressBarColorConverter x:Key="ProgressBarColorConverter"/>
        <converters:ProgressTextColorConverter x:Key="ProgressTextColorConverter"/>
        <converters:QueueItemBackgroundConverter x:Key="QueueItemBackgroundConverter"/>
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Stats -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Download Queue" 
                              FontSize="20" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"/>
                    
                    <Border Background="{DynamicResource PrimaryHueMidBrush}"
                           CornerRadius="12"
                           Padding="12,4"
                           Margin="16,0,0,0"
                           VerticalAlignment="Center">
                        <TextBlock Text="{Binding Stats.Total, StringFormat='{}{0} items'}"
                                  FontSize="12"
                                  FontWeight="Medium"/>
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                           Command="{Binding ClearAllCommand}"
                           Height="36"
                           Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="DeleteForever" 
                                                   Width="20" 
                                                   Height="20"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Clear All" 
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                           Command="{Binding ClearCompletedCommand}"
                           Height="36"
                           Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="DeleteSweep" 
                                                   Width="20" 
                                                   Height="20"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Clear Completed" 
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                           Command="{Binding RetryFailedCommand}"
                           Height="36">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                   Width="20" 
                                                   Height="20"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Retry Failed" 
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Stats Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Tracks -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total" 
                              FontSize="12"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock Text="{Binding Stats.Total}" 
                              FontSize="20"
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </StackPanel>
                
                <!-- Completed Tracks -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Completed" 
                              FontSize="12"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock Text="{Binding Stats.Completed}" 
                              FontSize="20"
                              FontWeight="SemiBold"
                              Foreground="#10b981"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Queue List with Virtual Scrolling -->
        <ListView x:Name="QueueListView"
                 Grid.Row="2"
                 ItemsSource="{Binding QueueItems}"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Standard"
                 VirtualizingPanel.ScrollUnit="Pixel"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 SelectionMode="Single"
                 Background="Transparent"
                 BorderThickness="0">
            
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <!-- Override any hover/selection backgrounds -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!-- Queue Item Card - Direct background with x:Name for code-behind access -->
                    <Border x:Name="ItemBorder"
                            Margin="8,4" 
                            CornerRadius="6"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            Background="Transparent">
                        <Grid Margin="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Artwork -->
                            <Border Grid.Column="0" 
                                   Width="50" 
                                   Height="50"
                                   CornerRadius="4"
                                   Background="{DynamicResource MaterialDesignDivider}">
                                <Image Source="{Binding CoverUrl}" 
                                      Stretch="UniformToFill"/>
                            </Border>
                            
                            <!-- Info and Progress -->
                            <StackPanel Grid.Column="1" 
                                       Margin="12,0"
                                       VerticalAlignment="Center">
                                
                                <!-- Title -->
                                <TextBlock Text="{Binding DisplayTitle}" 
                                          FontWeight="SemiBold"
                                          FontSize="13"
                                          Foreground="{DynamicResource MaterialDesignBody}"
                                          TextTrimming="CharacterEllipsis"/>
                                          
                                <!-- Artist -->
                                <TextBlock Text="{Binding Artist}" 
                                          FontSize="11"
                                          Foreground="{DynamicResource MaterialDesignBodyLight}"
                                          TextTrimming="CharacterEllipsis"
                                          Margin="0,2,0,0"/>
                                
                                <!-- Track Progress for Albums/Playlists -->
                                <TextBlock Text="{Binding TrackProgressText}" 
                                          FontSize="11"
                                          Foreground="{DynamicResource MaterialDesignBodyLight}"
                                          Margin="0,2,0,0"
                                          Visibility="{Binding IsAlbumOrPlaylist, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <!-- Progress Bar (visible when downloading) -->
                                <ProgressBar Value="{Binding Progress}"
                                           Maximum="100"
                                           Height="4"
                                           Margin="0,6,0,0"
                                           Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           Foreground="{Binding Converter={StaticResource ProgressBarColorConverter}}"/>
                            </StackPanel>
                            
                            <!-- Right side: Status Icons and Control Buttons -->
                            <StackPanel Grid.Column="2" 
                                       Orientation="Horizontal"
                                       VerticalAlignment="Center">
                                
                                <!-- Success Icon (green checkmark) - shown when fully completed -->
                                <materialDesign:PackIcon Kind="CheckCircle" 
                                                       Width="24" 
                                                       Height="24"
                                                       Foreground="#10b981"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"
                                                       ToolTip="Completed successfully">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsCompleted}" Value="True"/>
                                                        <Condition Binding="{Binding IsPartialSuccess}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                
                                <!-- Warning/Error Icon with Popup - shown for partial success or failed -->
                                <materialDesign:PopupBox 
                                    PlacementMode="BottomAndAlignRightEdges"
                                    StaysOpen="False"
                                    Margin="0,0,8,0"
                                    ToolTip="Click to see error details"
                                    Visibility="{Binding ShowErrorButton, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <materialDesign:PopupBox.ToggleContent>
                                        <materialDesign:PackIcon Width="24" Height="24">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Kind" Value="AlertCircle"/>
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPartialSuccess}" Value="True">
                                                            <Setter Property="Kind" Value="AlertCircleOutline"/>
                                                            <Setter Property="Foreground" Value="#F59E0B"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PopupBox.PopupContent>
                                        <Border Background="{DynamicResource MaterialDesignPaper}"
                                               Padding="16"
                                               MaxWidth="300"
                                               CornerRadius="8">
                                            <StackPanel>
                                                <TextBlock FontWeight="SemiBold" 
                                                          FontSize="14"
                                                          Margin="0,0,0,8"
                                                          Foreground="{DynamicResource MaterialDesignBody}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Download Failed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsPartialSuccess}" Value="True">
                                                                    <Setter Property="Text" Value="Partial Download"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding ErrorSummary}" 
                                                          TextWrapping="Wrap"
                                                          FontSize="12"
                                                          Margin="0,0,0,12"
                                                          Foreground="{DynamicResource MaterialDesignBody}"/>
                                                <Button Content="View Details"
                                                       Style="{StaticResource MaterialDesignFlatButton}"
                                                       HorizontalAlignment="Left"
                                                       Click="ViewFailedTracksButton_Click"
                                                       Tag="{Binding}"
                                                       Visibility="{Binding IsPartialSuccess, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </Border>
                                    </materialDesign:PopupBox.PopupContent>
                                </materialDesign:PopupBox>
                                
                                <!-- Pause Button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                       Width="32"
                                       Height="32"
                                       Padding="0"
                                       Command="{Binding DataContext.PauseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Visibility="{Binding CanPause, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       ToolTip="Pause">
                                    <materialDesign:PackIcon Kind="Pause" Width="18" Height="18"/>
                                </Button>
                                
                                <!-- Resume Button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                       Width="32"
                                       Height="32"
                                       Padding="0"
                                       Command="{Binding DataContext.ResumeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Visibility="{Binding CanResume, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       ToolTip="Resume">
                                    <materialDesign:PackIcon Kind="Play" Width="18" Height="18"/>
                                </Button>
                                
                                <!-- Retry Button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                       Width="32"
                                       Height="32"
                                       Padding="0"
                                       Command="{Binding DataContext.RetryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Visibility="{Binding CanRetry, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       ToolTip="Retry">
                                    <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18"/>
                                </Button>
                                
                                <!-- Cancel Button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                       Width="32"
                                       Height="32"
                                       Padding="0"
                                       Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Visibility="{Binding CanCancel, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       ToolTip="Cancel">
                                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <!-- Empty State -->
        <StackPanel Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding IsQueueEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
            <materialDesign:PackIcon Kind="Download" 
                                   Width="64" 
                                   Height="64"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   HorizontalAlignment="Center"/>
            <TextBlock Text="No downloads in queue" 
                      FontSize="16"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                      Margin="0,16,0,0"
                      HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Pagination Controls -->
        <Border Grid.Row="3"
               Background="{DynamicResource MaterialDesignCardBackground}"
               BorderBrush="{DynamicResource MaterialDesignDivider}"
               BorderThickness="0,1,0,0"
               Padding="16,12"
               Visibility="{Binding ShowPagination, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Command="{Binding LoadPreviousPageCommand}"
                       IsEnabled="{Binding CanLoadPrevious}"
                       Height="36">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChevronLeft" 
                                               Width="20" 
                                               Height="20"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="Previous" 
                                  Margin="4,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <TextBlock Grid.Column="1"
                          Text="{Binding PageInfo}"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                
                <Button Grid.Column="2"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Command="{Binding LoadNextPageCommand}"
                       IsEnabled="{Binding CanLoadNext}"
                       Height="36">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Next" 
                                  Margin="0,0,4,0"
                                  VerticalAlignment="Center"/>
                        <materialDesign:PackIcon Kind="ChevronRight" 
                                               Width="20" 
                                               Height="20"
                                               VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
