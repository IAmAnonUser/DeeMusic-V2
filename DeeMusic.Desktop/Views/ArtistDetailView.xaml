<UserControl x:Class="DeeMusic.Desktop.Views.ArtistDetailView"
             x:Name="ArtistDetailViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:DeeMusic.Desktop.Controls"
             xmlns:views="clr-namespace:DeeMusic.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <views:AlternationIndexConverter x:Key="AlternationIndexConverter"/>
        
        <!-- Style for tab buttons -->
        <Style x:Key="ArtistTabButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Album Card Template with Download Button -->
        <DataTemplate x:Key="AlbumCardTemplate">
            <materialDesign:Card Width="160" 
                               Height="240" 
                               Margin="0,0,16,16"
                               UniformCornerRadius="8"
                               Cursor="Hand">
                <materialDesign:Card.InputBindings>
                    <MouseBinding MouseAction="LeftClick"
                                 Command="{Binding DataContext.ViewAlbumCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 CommandParameter="{Binding}"/>
                </materialDesign:Card.InputBindings>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="160"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <controls:CachedImage ImageUrl="{Binding CoverMedium}" 
                                             Stretch="UniformToFill"/>
                        
                        <Border Background="#80000000">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Grid}}" Value="True">
                                            <Setter Property="Opacity" Value="1"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                   Width="48"
                                   Height="48"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Command="{Binding DataContext.DownloadAlbumCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   CommandParameter="{Binding}"
                                   ToolTip="Download Album">
                                <materialDesign:PackIcon Kind="Download" 
                                                       Width="24" 
                                                       Height="24"/>
                            </Button>
                        </Border>
                    </Grid>
                    
                    <StackPanel Grid.Row="1" 
                               Margin="12,8"
                               VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}" 
                                  FontWeight="SemiBold"
                                  FontSize="13"
                                  TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Year}" 
                                  FontSize="11"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <!-- Loading Indicator -->
        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                    Width="48"
                    Height="48"
                    IsIndeterminate="True"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Back Button -->
                <Button Grid.Row="0"
                       Style="{StaticResource MaterialDesignIconButton}"
                       Command="{Binding BackCommand}"
                       Width="40"
                       Height="40"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,16"
                       ToolTip="Back">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                </Button>
                
                <!-- Artist Header with Download Buttons -->
                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Artist Picture -->
                    <Border Grid.Column="0"
                           Width="140"
                           Height="140"
                           CornerRadius="70"
                           Background="{DynamicResource MaterialDesignDivider}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="16" 
                                            ShadowDepth="3" 
                                            Opacity="0.3"/>
                        </Border.Effect>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush>
                                    <ImageBrush.ImageSource>
                                        <Binding Path="Artist.PictureBig"/>
                                    </ImageBrush.ImageSource>
                                </ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    
                    <!-- Artist Info -->
                    <StackPanel Grid.Column="1" 
                               Margin="24,0,0,0"
                               VerticalAlignment="Center">
                        
                        <TextBlock Text="ARTIST" 
                                  FontSize="11"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                  Margin="0,0,0,6"/>
                        
                        <TextBlock Text="{Binding Artist.Name}" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,12"/>
                        
                        <TextBlock Text="{Binding Artist.NbFan, StringFormat='{}{0:N0} fans'}" 
                                  FontSize="13"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                    
                    <!-- Bulk Download Buttons -->
                    <StackPanel Grid.Column="2"
                               Orientation="Vertical"
                               VerticalAlignment="Top">
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding DataContext.DownloadAllAlbumsCommand, ElementName=ArtistDetailViewControl}"
                                Height="28"
                                Padding="12,0"
                                Margin="0,0,0,3"
                                ToolTip="Download all albums by this artist">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Album" 
                                                       Width="14" 
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,6,0"/>
                                <TextBlock Text="Download All Albums" VerticalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding DataContext.DownloadAllSinglesCommand, ElementName=ArtistDetailViewControl}"
                                Height="28"
                                Padding="12,0"
                                Margin="0,0,0,3"
                                ToolTip="Download all singles by this artist">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MusicNote" 
                                                       Width="14" 
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,6,0"/>
                                <TextBlock Text="Download All Singles" VerticalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding DataContext.DownloadAllEPsCommand, ElementName=ArtistDetailViewControl}"
                                Height="28"
                                Padding="12,0"
                                ToolTip="Download all EPs by this artist">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DiscPlayer" 
                                                       Width="14" 
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,6,0"/>
                                <TextBlock Text="Download All EPs" VerticalAlignment="Center" FontSize="11"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <!-- Tab Buttons and Sort Options -->
                <Grid Grid.Row="2" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Tab Buttons -->
                    <StackPanel Grid.Column="0"
                               Orientation="Horizontal">
                        <Button Content="Top Tracks" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeTabCommand}" 
                                CommandParameter="toptracks"
                                Tag="{Binding IsTopTracksTabSelected}"/>
                        <Button Content="Albums" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeTabCommand}" 
                                CommandParameter="albums"
                                Tag="{Binding IsAlbumsTabSelected}"/>
                        <Button Content="Singles" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeTabCommand}" 
                                CommandParameter="singles"
                                Tag="{Binding IsSinglesTabSelected}"/>
                        <Button Content="EPs" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeTabCommand}" 
                                CommandParameter="eps"
                                Tag="{Binding IsEPsTabSelected}"/>
                        <Button Content="Featured In" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeTabCommand}" 
                                CommandParameter="featuredin"
                                Tag="{Binding IsFeaturedInTabSelected}"/>
                    </StackPanel>
                    
                    <!-- Sort Options for Albums Tab -->
                    <StackPanel Grid.Column="2"
                               Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsAlbumsTabSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Sort by:" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"
                                  FontSize="13"
                                  Opacity="0.7"/>
                        <Button Content="Release Date" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeSortOrderCommand}" 
                                CommandParameter="date"
                                Tag="{Binding IsSortByDateSelected}"
                                FontSize="13"
                                Height="32"
                                Padding="12,0"/>
                        <Button Content="A-Z" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeSortOrderCommand}" 
                                CommandParameter="alphabetical"
                                Tag="{Binding IsSortByAlphabeticalSelected}"
                                FontSize="13"
                                Height="32"
                                Padding="12,0"/>
                    </StackPanel>
                    
                    <!-- Sort Options for Singles Tab -->
                    <StackPanel Grid.Column="2"
                               Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsSinglesTabSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Sort by:" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"
                                  FontSize="13"
                                  Opacity="0.7"/>
                        <Button Content="Release Date" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeSortOrderCommand}" 
                                CommandParameter="date"
                                Tag="{Binding IsSortByDateSelected}"
                                FontSize="13"
                                Height="32"
                                Padding="12,0"/>
                        <Button Content="A-Z" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeSortOrderCommand}" 
                                CommandParameter="alphabetical"
                                Tag="{Binding IsSortByAlphabeticalSelected}"
                                FontSize="13"
                                Height="32"
                                Padding="12,0"/>
                    </StackPanel>
                    
                    <!-- Sort Options for EPs Tab -->
                    <StackPanel Grid.Column="2"
                               Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsEPsTabSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Sort by:" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"
                                  FontSize="13"
                                  Opacity="0.7"/>
                        <Button Content="Release Date" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeSortOrderCommand}" 
                                CommandParameter="date"
                                Tag="{Binding IsSortByDateSelected}"
                                FontSize="13"
                                Height="32"
                                Padding="12,0"/>
                        <Button Content="A-Z" 
                                Style="{StaticResource ArtistTabButton}"
                                Command="{Binding ChangeSortOrderCommand}" 
                                CommandParameter="alphabetical"
                                Tag="{Binding IsSortByAlphabeticalSelected}"
                                FontSize="13"
                                Height="32"
                                Padding="12,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- Content Area -->
                <Grid Grid.Row="3">
                    <!-- Top Tracks Tab -->
                    <materialDesign:Card Visibility="{Binding IsTopTracksTabSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        UniformCornerRadius="8"
                                        Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Column Headers -->
                            <Border Grid.Row="0"
                                   Background="{DynamicResource MaterialDesignToolBarBackground}"
                                   Padding="16,12"
                                   BorderBrush="{DynamicResource MaterialDesignDivider}"
                                   BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                              Text="TITLE"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              Margin="16,0"/>
                                    
                                    <TextBlock Grid.Column="1"
                                              Text="ALBUM"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              Margin="16,0"/>
                                    
                                    <TextBlock Grid.Column="2"
                                              Text="DURATION"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              Margin="16,0"/>
                                </Grid>
                            </Border>
                            
                            <!-- Track List -->
                            <ListView Grid.Row="1"
                                     ItemsSource="{Binding TopTracks}"
                                     SelectionMode="Single"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     AlternationCount="999">
                                
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="16,12"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Track Title -->
                                            <TextBlock Grid.Column="0"
                                                      Text="{Binding Title}"
                                                      FontSize="14"
                                                      VerticalAlignment="Center"
                                                      TextTrimming="CharacterEllipsis"
                                                      Margin="16,0"/>
                                            
                                            <!-- Album -->
                                            <TextBlock Grid.Column="1"
                                                      Text="{Binding Album.Title}"
                                                      FontSize="14"
                                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                      VerticalAlignment="Center"
                                                      TextTrimming="CharacterEllipsis"
                                                      Margin="16,0"/>
                                            
                                            <!-- Duration -->
                                            <TextBlock Grid.Column="2"
                                                      Text="{Binding FormattedDuration}"
                                                      FontSize="14"
                                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                      VerticalAlignment="Center"
                                                      Margin="16,0"/>
                                            
                                            <!-- Download Button -->
                                            <Button Grid.Column="3"
                                                   Style="{StaticResource MaterialDesignIconButton}"
                                                   Width="36"
                                                   Height="36"
                                                   Command="{Binding DataContext.DownloadTrackCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   ToolTip="Download Track">
                                                <materialDesign:PackIcon Kind="Download" 
                                                                       Width="18" 
                                                                       Height="18"/>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- Albums Tab -->
                    <ItemsControl Visibility="{Binding IsAlbumsTabSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 ItemsSource="{Binding Albums}"
                                 ItemTemplate="{StaticResource AlbumCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    
                    <!-- Singles Tab -->
                    <ItemsControl Visibility="{Binding IsSinglesTabSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 ItemsSource="{Binding Singles}"
                                 ItemTemplate="{StaticResource AlbumCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    
                    <!-- EPs Tab -->
                    <ItemsControl Visibility="{Binding IsEPsTabSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 ItemsSource="{Binding EPs}"
                                 ItemTemplate="{StaticResource AlbumCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    
                    <!-- Featured In Tab -->
                    <ItemsControl Visibility="{Binding IsFeaturedInTabSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 ItemsSource="{Binding FeaturedIn}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Width="160" 
                                                   Height="240" 
                                                   Margin="0,0,16,16"
                                                   UniformCornerRadius="8"
                                                   Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="160"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <controls:CachedImage Grid.Row="0" 
                                                             ImageUrl="{Binding PictureMedium}" 
                                                             Stretch="UniformToFill"/>
                                        
                                        <StackPanel Grid.Row="1" 
                                                   Margin="12,8"
                                                   VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" 
                                                      FontWeight="SemiBold"
                                                      FontSize="13"
                                                      TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding User.Name}" 
                                                      FontSize="11"
                                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                      Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
