<UserControl x:Class="DeeMusic.Desktop.Controls.SearchResultCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="600">
    
    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#242424"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Download Button Style -->
        <Style x:Key="DownloadButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Text="â¬‡" 
                                           FontSize="14"
                                           Margin="0,0,6,0"
                                           VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5558e3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4a4dd1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#9ca3af"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Info Button Style -->
        <Style x:Key="InfoButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9ca3af"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1f2937"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4b5563"/>
                                <Setter Property="Foreground" Value="#ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Artwork Style -->
        <Style x:Key="ArtworkStyle" TargetType="Border">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="#2a2a2a"/>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource CardStyle}"
            MouseLeftButtonDown="Card_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Artwork -->
            <Border Grid.Column="0" 
                    Style="{StaticResource ArtworkStyle}"
                    Margin="0,0,12,0">
                <Grid>
                    <!-- Placeholder when no image -->
                    <TextBlock x:Name="artworkPlaceholder"
                               Text="ðŸŽµ"
                               FontSize="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#4b5563"/>
                    
                    <!-- Actual image -->
                    <Image x:Name="artworkImage"
                           Stretch="UniformToFill"
                           Visibility="Collapsed">
                        <Image.Clip>
                            <RectangleGeometry Rect="0,0,80,80" RadiusX="6" RadiusY="6"/>
                        </Image.Clip>
                    </Image>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">
                <!-- Title -->
                <TextBlock x:Name="titleText"
                           Text="Track Title"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="White"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,4"/>
                
                <!-- Artist -->
                <TextBlock x:Name="artistText"
                           Text="Artist Name"
                           FontSize="13"
                           Foreground="#9ca3af"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,4"/>
                
                <!-- Additional Info -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="albumText"
                               Text="Album Name"
                               FontSize="12"
                               Foreground="#6b7280"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="300"
                               Margin="0,0,12,0"/>
                    
                    <TextBlock x:Name="durationText"
                               Text="3:45"
                               FontSize="12"
                               Foreground="#6b7280"
                               Margin="0,0,12,0"/>
                    
                    <TextBlock x:Name="yearText"
                               Text="2024"
                               FontSize="12"
                               Foreground="#6b7280"/>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Button x:Name="infoButton"
                        Style="{StaticResource InfoButtonStyle}"
                        Content="Info"
                        Margin="0,0,8,0"
                        Visibility="Collapsed"/>
                
                <Button x:Name="downloadButton"
                        Style="{StaticResource DownloadButtonStyle}"
                        Content="Download"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
